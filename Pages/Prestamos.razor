@page "/prestamos"
@using ByteBank.Models
@using ByteBank.Services
@inject PrestamoService PrestamoService
@inject Microsoft.JSInterop.IJSRuntime JS

<PageTitle>Préstamos</PageTitle>

<h1>Gestión de Préstamos</h1>

<div class="row mb-3">
    <div class="col-md-6">
        <button class="btn btn-primary" @onclick="MostrarFormularioCrear">
            <span class="bi bi-plus-circle"></span> Nuevo Préstamo
        </button>
        <button class="btn btn-info ms-2" @onclick="MostrarCalculadora">
            <span class="bi bi-calculator"></span> Calcular Cuota
        </button>
    </div>
</div>

@if (prestamos == null)
{
    <p><em>Cargando préstamos...</em></p>
}
else if (!prestamos.Any())
{
    <div class="alert alert-info">
        <strong>No hay préstamos registrados.</strong>
    </div>
}
else
{
    <div class="mb-3">
        <strong>Total de préstamos:</strong> @prestamos.Count
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Número</th>
                <th>ID Cuenta</th>
                <th>Fecha</th>
                <th>Valor</th>
                <th>Interés</th>
                <th>Plazo</th>
                <th>Cuota</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var prestamo in prestamos)
            {
                <tr>
                    <td>@prestamo.IdPrestamo</td>
                    <td><strong>@prestamo.Numero</strong></td>
                    <td>@prestamo.IdCuenta</td>
                    <td>@prestamo.Fecha.ToShortDateString()</td>
                    <td class="text-primary">$@prestamo.Valor.ToString("N2")</td>
                    <td>@prestamo.Interes%</td>
                    <td>@prestamo.Plazo meses</td>
                    <td class="text-success"><strong>$@prestamo.Cuota.ToString("N2")</strong></td>
                    <td>
                            <button class="btn btn-sm btn-primary me-1" @onclick="() => EditarPrestamo(prestamo)">
                                Editar
                            </button>
                            <button class="btn btn-sm btn-danger" @onclick="() => SolicitarEliminar(prestamo.IdPrestamo)">
                                Eliminar
                            </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@if (mensaje != null)
{
    <div class="alert @(esError ? "alert-danger" : "alert-success") alert-dismissible fade show mt-3" role="alert">
        @mensaje
        <button type="button" class="btn-close" @onclick="() => mensaje = null"></button>
    </div>
}

<!-- Modal Calculadora -->
@if (mostrarCalculadora)
{
    <div class="modal fade show" style="display: block; background-color: rgba(0,0,0,0.5);" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header bg-info text-white">
                    <h5 class="modal-title">Calculadora de Cuotas</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="() => mostrarCalculadora = false"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="@calculo" OnValidSubmit="CalcularCuota">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label>Valor del Préstamo:</label>
                                <InputNumber class="form-control" @bind-Value="calculo.Valor" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label>Tasa de Interés (%):</label>
                                <InputNumber class="form-control" @bind-Value="calculo.Interes" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label>Plazo (meses):</label>
                                <InputNumber class="form-control" @bind-Value="calculo.Plazo" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label>Seguro (opcional):</label>
                                <InputNumber class="form-control" @bind-Value="calculo.Seguro" />
                            </div>
                        </div>
                        <div class="d-flex justify-content-end gap-2">
                            <button type="button" class="btn btn-secondary" @onclick="() => mostrarCalculadora = false">Cerrar</button>
                            <button type="submit" class="btn btn-info">Calcular</button>
                        </div>
                    </EditForm>

                    @if (resultadoCalculo != null)
                    {
                        <div class="alert alert-success mt-3">
                            <h6>Resultado del Cálculo:</h6>
                            <ul class="mb-0">
                                <li><strong>Cuota Mensual:</strong> $@resultadoCalculo.CuotaMensual.ToString("N2")</li>
                                <li><strong>Total a Pagar:</strong> $@resultadoCalculo.TotalAPagar.ToString("N2")</li>
                                <li><strong>Total Intereses:</strong> $@resultadoCalculo.TotalIntereses.ToString("N2")</li>
                            </ul>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}

<!-- Modal Crear/Editar -->
@if (mostrarFormulario)
{
    <div class="modal fade show" style="display: block; background-color: rgba(0,0,0,0.5);" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@(editingId.HasValue ? "Editar Préstamo" : "Nuevo Préstamo")</h5>
                    <button type="button" class="btn-close" @onclick="CancelarFormulario"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="@nuevoPrestamo" OnValidSubmit="CrearPrestamo">
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label>Número de Préstamo:</label>
                                <InputText class="form-control" @bind-Value="nuevoPrestamo.Numero" />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label>ID Cuenta:</label>
                                <InputNumber class="form-control" @bind-Value="nuevoPrestamo.IdCuenta" />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label>Fecha:</label>
                                <InputDate class="form-control" @bind-Value="nuevoPrestamo.Fecha" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3 mb-3">
                                <label>Valor:</label>
                                <InputNumber class="form-control" @bind-Value="nuevoPrestamo.Valor" />
                            </div>
                            <div class="col-md-3 mb-3">
                                <label>Interés (%):</label>
                                <InputNumber class="form-control" @bind-Value="nuevoPrestamo.Interes" />
                            </div>
                            <div class="col-md-3 mb-3">
                                <label>Plazo (meses):</label>
                                <InputNumber class="form-control" @bind-Value="nuevoPrestamo.Plazo" />
                            </div>
                            <div class="col-md-3 mb-3">
                                <label>Seguro:</label>
                                <InputNumber class="form-control" @bind-Value="nuevoPrestamo.Seguro" />
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="CancelarFormulario">Cancelar</button>
                            <button type="submit" class="btn btn-success">Guardar</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

<!-- Modal Confirmar Eliminación -->
@if (mostrarConfirmEliminar && prestamoAEliminarId.HasValue)
{
    <div class="modal fade show" style="display: block; background-color: rgba(0,0,0,0.5);" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Confirmar Eliminación</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CancelarEliminar"></button>
                </div>
                <div class="modal-body">
                    <p>¿Está seguro que desea eliminar el préstamo #<strong>@prestamoAEliminarId</strong>?</p>
                    <p class="text-muted">Esta acción no se puede deshacer.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CancelarEliminar">Cancelar</button>
                    <button type="button" class="btn btn-danger" @onclick="ConfirmarEliminar">Eliminar definitivamente</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<Prestamo>? prestamos;
    private PrestamoCreate nuevoPrestamo = new() { Fecha = DateTime.Now };
    private CalculoCuota calculo = new();
    private CalculoCuotaResponse? resultadoCalculo;
    
    private bool mostrarFormulario = false;
    private bool mostrarCalculadora = false;
    private int? editingId = null;
    
    private bool mostrarConfirmEliminar = false;
    private int? prestamoAEliminarId;

    private string? mensaje;
    private bool esError;

    protected override async Task OnInitializedAsync()
    {
        await CargarPrestamos();
    }

    private async Task CargarPrestamos()
    {
        prestamos = await PrestamoService.GetPrestamosAsync();
    }

    private void MostrarFormularioCrear()
    {
        mostrarFormulario = true;
        editingId = null;
        // Autogenerar número con prefijo 'PR' a partir del último número
        int maxNum = 0;
        if (prestamos != null && prestamos.Any())
        {
            foreach (var p in prestamos)
            {
                if (string.IsNullOrWhiteSpace(p.Numero))
                    continue;
                var digits = new string(p.Numero.Where(char.IsDigit).ToArray());
                if (int.TryParse(digits, out var n))
                {
                    if (n > maxNum) maxNum = n;
                }
            }
        }
        var next = maxNum + 1;
        // Formato total 8 caracteres: 'PR' + 6 dígitos
        nuevoPrestamo = new() { Fecha = DateTime.Now, Numero = $"PR{next.ToString("D6")}" };
        mensaje = null;
    }

    private void MostrarCalculadora()
    {
        mostrarCalculadora = true;
        calculo = new();
        resultadoCalculo = null;
        mensaje = null;
    }

    private void CancelarFormulario()
    {
        mostrarFormulario = false;
        nuevoPrestamo = new() { Fecha = DateTime.Now };
        editingId = null;
    }

    private async Task CalcularCuota()
    {
        var (resp, err) = await PrestamoService.CalcularCuotaAsync(calculo);
        if (err != null)
        {
            mensaje = $"Error al calcular cuota: {err}";
            esError = true;
            resultadoCalculo = null;
            return;
        }

        resultadoCalculo = resp;
    }

    private void EditarPrestamo(Prestamo prestamo)
    {
        editingId = prestamo.IdPrestamo;
        // mapear a PrestamoCreate
        nuevoPrestamo = new PrestamoCreate
        {
            IdCuenta = prestamo.IdCuenta,
            Numero = prestamo.Numero,
            Fecha = prestamo.Fecha,
            Valor = prestamo.Valor,
            Interes = prestamo.Interes,
            Plazo = prestamo.Plazo,
            Seguro = prestamo.Seguro,
            Cuota = prestamo.Cuota
        };
        mostrarFormulario = true;
        mensaje = null;
    }

    private async Task CrearPrestamo()
    {
        // Calcular la cuota antes de enviar (si el endpoint de cálculo existe)
        try
        {
            var calc = new CalculoCuota { Valor = nuevoPrestamo.Valor, Interes = nuevoPrestamo.Interes, Plazo = nuevoPrestamo.Plazo, Seguro = nuevoPrestamo.Seguro };
            var (respCalc, errCalc) = await PrestamoService.CalcularCuotaAsync(calc);
            if (errCalc != null)
            {
                // Guardar el error en mensaje para que el usuario lo vea
                mensaje = $"Error al calcular cuota previo al envío: {errCalc}";
                esError = true;
                nuevoPrestamo.Cuota = 0m;
            }
            else
            {
                nuevoPrestamo.Cuota = respCalc?.CuotaMensual ?? 0m;
            }
        }
        catch
        {
            nuevoPrestamo.Cuota = 0m;
        }

        if (editingId.HasValue)
        {
            var (actualizado, err) = await PrestamoService.UpdatePrestamoAsync(editingId.Value, nuevoPrestamo);
            if (err != null)
            {
                mensaje = $"Error al actualizar el préstamo: {err}";
                esError = true;
                return;
            }

            mensaje = "Préstamo actualizado exitosamente";
            esError = false;
            mostrarFormulario = false;
            editingId = null;
            await CargarPrestamos();
            return;
        }

        var (resultado, error) = await PrestamoService.CreatePrestamoAsync(nuevoPrestamo);
        if (error != null)
        {
            mensaje = $"Error al crear el préstamo: {error}";
            esError = true;
            return;
        }

        mensaje = "Préstamo creado exitosamente";
        esError = false;
        mostrarFormulario = false;
        await CargarPrestamos();
    }

    private void SolicitarEliminar(int id)
    {
        prestamoAEliminarId = id;
        mostrarConfirmEliminar = true;
        mensaje = null;
    }

    private void CancelarEliminar()
    {
        mostrarConfirmEliminar = false;
        prestamoAEliminarId = null;
    }

    private async Task ConfirmarEliminar()
    {
        if (!prestamoAEliminarId.HasValue) return;

        var exito = await PrestamoService.DeletePrestamoAsync(prestamoAEliminarId.Value);
        if (exito)
        {
            mensaje = "Préstamo eliminado exitosamente";
            esError = false;
            await CargarPrestamos();
        }
        else
        {
            mensaje = "Error al eliminar el préstamo";
            esError = true;
        }
        CancelarEliminar();
    }
}