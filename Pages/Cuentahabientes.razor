@page "/cuentahabientes"
@using ByteBank.Models
@using ByteBank.Services
@inject CuentahabienteService CuentahabienteService
@inject CatalogoService CatalogoService

<PageTitle>Cuentahabientes</PageTitle>

<style>
    .form-select option {
        color: #212529 !important;
        background-color: #fff !important;
    }
    .form-select:focus option {
        color: #212529 !important;
        background-color: #fff !important;
    }
</style>

<h1>Cuentahabientes</h1>

<div class="row mb-3">
    <div class="col-md-6">
        <button class="btn btn-primary" @onclick="MostrarFormularioCrear">
            <span class="bi bi-plus-circle"></span> Nuevo Cuentahabiente
        </button>
    </div>
    <div class="col-md-6">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Buscar por documento..." @bind="busqueda" @onkeypress="OnKeyPress" />
            <button class="btn btn-outline-secondary" @onclick="BuscarPorDocumento">
                <span class="bi bi-search"></span> Buscar
            </button>
            @if (!string.IsNullOrWhiteSpace(busqueda))
            {
                <button class="btn btn-outline-secondary" @onclick="LimpiarBusqueda" title="Limpiar búsqueda">
                    <span class="bi bi-x"></span>
                </button>
            }
        </div>
    </div>
</div>

@if (cuentahabientes == null)
{
    <p><em>Cargando cuentahabientes...</em></p>
}
else if (!cuentahabientes.Any())
{
    <div class="alert alert-info">
        <strong>No hay cuentahabientes registrados.</strong>
    </div>
}
else
{
    <div class="mb-3">
        <strong>Total de cuentahabientes:</strong> @cuentahabientes.Count
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Tipo Documento</th>
                <th>Documento</th>
                <th>Teléfono</th>
                <th>Ciudad</th>
                <th>Dirección</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cuentahabiente in cuentahabientes)
            {
                <tr>
                    <td>@cuentahabiente.IdCuentahabiente</td>
                    <td><strong>@cuentahabiente.Nombre</strong></td>
                    <td>
                        @if (!string.IsNullOrEmpty(cuentahabiente.TipoDocumentoNombre))
                        {
                            <span class="badge bg-info">@cuentahabiente.TipoDocumentoNombre</span>
                        }
                        else
                        {
                            <span class="text-muted">ID: @cuentahabiente.IdTipoDocumento</span>
                        }
                    </td>
                    <td>@cuentahabiente.Documento</td>
                    <td>@cuentahabiente.Telefono</td>
                    <td>
                        @if (!string.IsNullOrEmpty(cuentahabiente.NombreCiudad))
                        {
                            <span class="badge bg-primary">@cuentahabiente.NombreCiudad</span>
                        }
                        else
                        {
                            <span class="text-muted">ID: @cuentahabiente.IdCiudad</span>
                        }
                    </td>
                    <td>@cuentahabiente.Direccion</td>
                    <td>
                        <div class="btn-group" role="group">
                            <button class="btn btn-sm btn-primary me-2" @onclick="() => MostrarFormularioEditar(cuentahabiente.IdCuentahabiente)">
                                <span class="bi bi-pencil"></span> Editar
                            </button>
                            <button class="btn btn-sm btn-danger" @onclick="() => SolicitarEliminar(cuentahabiente.IdCuentahabiente)">
                                <span class="bi bi-trash"></span> Eliminar
                            </button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@if (mensaje != null)
{
    <div class="alert @(esError ? "alert-danger" : "alert-success") alert-dismissible fade show mt-3" role="alert">
        @mensaje
        <button type="button" class="btn-close" @onclick="() => mensaje = null"></button>
    </div>
}

<!-- Modal Crear/Editar -->
@if (mostrarFormulario)
{
    <div class="modal fade show" style="display: block; background-color: rgba(0,0,0,0.5);" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@(esModoEdicion ? "Editar Cuentahabiente" : "Nuevo Cuentahabiente")</h5>
                    <button type="button" class="btn-close" @onclick="CancelarFormulario"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="@nuevoCuentahabiente" OnValidSubmit="CrearCuentahabiente">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label>Nombre:</label>
                                <InputText class="form-control" @bind-Value="nuevoCuentahabiente.Nombre" />
                            </div>
                            <div class="col-md-3 mb-3">
                                <label>Tipo Documento:</label>
                                @if (tiposDocumento == null)
                                {
                                    <div class="form-select"><em>Cargando tipos de documento...</em></div>
                                }
                                else if (!tiposDocumento.Any())
                                {
                                    <div class="form-select text-danger"><em>No hay tipos de documento disponibles</em></div>
                                }
                                else
                                {
                                    <InputSelect class="form-select" @bind-Value="nuevoCuentahabiente.IdTipoDocumento" TValue="int">
                                        <option value="0">Seleccionar...</option>
                                        @foreach (var tipo in tiposDocumento)
                                        {
                                            <option value="@tipo.IdTipoDocumento">@((!string.IsNullOrWhiteSpace(tipo.Nombre) ? tipo.Nombre : (!string.IsNullOrWhiteSpace(tipo.Sigla) ? tipo.Sigla : $"ID: {tipo.IdTipoDocumento}")))</option>
                                        }
                                    </InputSelect>
                                    @if (tiposDocumento.Count == 0)
                                    {
                                        <small class="text-muted">No hay tipos de documento disponibles. Por favor, créelos primero en la sección de Catálogos.</small>
                                    }
                                }
                            </div>
                            <div class="col-md-3 mb-3">
                                <label>Documento:</label>
                                <InputText class="form-control" @bind-Value="nuevoCuentahabiente.Documento" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label>Dirección:</label>
                                <InputText class="form-control" @bind-Value="nuevoCuentahabiente.Direccion" />
                            </div>
                            <div class="col-md-3 mb-3">
                                <label>Teléfono:</label>
                                <InputText class="form-control" @bind-Value="nuevoCuentahabiente.Telefono" />
                            </div>
                            <div class="col-md-3 mb-3">
                                <label>Ciudad:</label>
                                @if (ciudades == null)
                                {
                                    <div class="form-select"><em>Cargando ciudades...</em></div>
                                }
                                else if (!ciudades.Any())
                                {
                                    <div class="form-select text-danger"><em>No hay ciudades disponibles</em></div>
                                }
                                else
                                {
                                    <InputSelect class="form-select" @bind-Value="nuevoCuentahabiente.IdCiudad" TValue="int">
                                        <option value="0">Seleccionar...</option>
                                        @foreach (var ciudad in ciudades)
                                        {
                                            <option value="@ciudad.IdCiudad">@((!string.IsNullOrWhiteSpace(ciudad.Nombre) ? ciudad.Nombre : $"ID: {ciudad.IdCiudad}"))</option>
                                        }
                                    </InputSelect>
                                    @if (ciudades.Count == 0)
                                    {
                                        <small class="text-muted">No hay ciudades disponibles. Por favor, créelas primero en la sección de Ciudades.</small>
                                    }
                                }
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label>Clave:</label>
                                @if (esModoEdicion)
                                {
                                    <div class="mb-2"><small class="text-info">Al editar un cuentahabiente, se debe ingresar también la clave.</small></div>
                                }
                                <InputText type="password" class="form-control" @bind-Value="nuevoCuentahabiente.Clave" />
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="CancelarFormulario">Cancelar</button>
                            <button type="submit" class="btn btn-success">@(esModoEdicion ? "Actualizar" : "Guardar")</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

<!-- Modal Confirmar Eliminación -->
@if (mostrarConfirmEliminar && cuentahabienteAEliminarId.HasValue)
{
    <div class="modal fade show" style="display: block; background-color: rgba(0,0,0,0.5);" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Confirmar Eliminación</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CancelarEliminar"></button>
                </div>
                <div class="modal-body">
                    <p>¿Está seguro que desea eliminar el cuentahabiente #<strong>@cuentahabienteAEliminarId</strong>?</p>
                    <p class="text-muted">Esta acción no se puede deshacer.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CancelarEliminar">Cancelar</button>
                    <button type="button" class="btn btn-danger" @onclick="ConfirmarEliminar">Eliminar definitivamente</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<Cuentahabiente>? cuentahabientes;
    private List<Ciudad>? ciudades;
    private List<TipoDocumento>? tiposDocumento;
    private CuentahabienteCreate nuevoCuentahabiente = new CuentahabienteCreate
    {
        Nombre = string.Empty,
        IdTipoDocumento = 0,
        Documento = string.Empty,
        Direccion = string.Empty,
        Telefono = string.Empty,
        IdCiudad = 0,
        Clave = string.Empty
    };
    private bool mostrarFormulario = false;
    private bool esModoEdicion = false;
    private int? idCuentahabienteEditar = null;
    
    private bool mostrarConfirmEliminar = false;
    private int? cuentahabienteAEliminarId;

    private string? mensaje;
    private bool esError;
    private string busqueda = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await CargarDatos();
    }

    private async Task CargarDatos()
    {
        try
        {
            cuentahabientes = await CuentahabienteService.GetCuentahabientesAsync();
            ciudades = await CatalogoService.GetCiudadesAsync();
            tiposDocumento = await CatalogoService.GetTiposDocumentoAsync();
            
            // Verificar que los datos se cargaron correctamente
            if (ciudades == null)
            {
                Console.WriteLine("Advertencia: ciudades es null");
            }

            if (tiposDocumento == null)
            {
                Console.WriteLine("Advertencia: tiposDocumento es null");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al cargar datos: {ex.Message}");
        }
    }

    private void MostrarFormularioCrear()
    {
        esModoEdicion = false;
        idCuentahabienteEditar = null;
        nuevoCuentahabiente = new CuentahabienteCreate
        {
            Nombre = string.Empty,
            IdTipoDocumento = 0,
            Documento = string.Empty,
            Direccion = string.Empty,
            Telefono = string.Empty,
            IdCiudad = 0,
            Clave = string.Empty
        };
        mostrarFormulario = true;
        mensaje = null;
        StateHasChanged();
    }

    private void CancelarFormulario()
    {
        mostrarFormulario = false;
        esModoEdicion = false;
        idCuentahabienteEditar = null;
        nuevoCuentahabiente = new CuentahabienteCreate
        {
            Nombre = string.Empty,
            IdTipoDocumento = 0,
            Documento = string.Empty,
            Direccion = string.Empty,
            Telefono = string.Empty,
            IdCiudad = 0,
            Clave = string.Empty
        };
        StateHasChanged();
    }

    private async Task CrearCuentahabiente()
    {
        if (esModoEdicion && idCuentahabienteEditar.HasValue)
        {
            await ActualizarCuentahabiente();
        }
        else
        {
            // Validaciones básicas antes de enviar al backend
            if (nuevoCuentahabiente.IdTipoDocumento == 0 || nuevoCuentahabiente.IdCiudad == 0)
            {
                mensaje = "Debe seleccionar Tipo de Documento y Ciudad.";
                esError = true;
                StateHasChanged();
                return;
            }
            var resultado = await CuentahabienteService.CreateCuentahabienteAsync(nuevoCuentahabiente);
            if (resultado != null)
            {
                mensaje = "Cuentahabiente creado exitosamente";
                esError = false;
                mostrarFormulario = false;
                esModoEdicion = false;
                idCuentahabienteEditar = null;
                nuevoCuentahabiente = new CuentahabienteCreate
                {
                    Nombre = string.Empty,
                    IdTipoDocumento = 0,
                    Documento = string.Empty,
                    Direccion = string.Empty,
                    Telefono = string.Empty,
                    IdCiudad = 0,
                    Clave = string.Empty
                };
                await CargarDatos();
            }
            else
            {
                mensaje = "Error al crear el cuentahabiente";
                esError = true;
            }
        }
        StateHasChanged();
    }

    private async Task MostrarFormularioEditar(int id)
    {
        var cuentahabiente = await CuentahabienteService.GetCuentahabienteAsync(id);
        if (cuentahabiente != null)
        {
            nuevoCuentahabiente = new CuentahabienteCreate
            {
                Nombre = cuentahabiente.Nombre,
                IdTipoDocumento = cuentahabiente.IdTipoDocumento,
                Documento = cuentahabiente.Documento,
                Direccion = cuentahabiente.Direccion,
                Telefono = cuentahabiente.Telefono,
                IdCiudad = cuentahabiente.IdCiudad,
                Clave = string.Empty // No se muestra la clave por seguridad
            };
            idCuentahabienteEditar = id;
            esModoEdicion = true;
            mostrarFormulario = true;
            mensaje = null;
            StateHasChanged();
        }
        else
        {
            mensaje = "Error al cargar los datos del cuentahabiente";
            esError = true;
        }
    }

    private async Task ActualizarCuentahabiente()
    {
        if (!idCuentahabienteEditar.HasValue)
            return;

        var resultado = await CuentahabienteService.UpdateCuentahabienteAsync(idCuentahabienteEditar.Value, nuevoCuentahabiente);
        if (resultado != null)
        {
            mensaje = "Cuentahabiente actualizado exitosamente";
            esError = false;
            mostrarFormulario = false;
            esModoEdicion = false;
            idCuentahabienteEditar = null;
            nuevoCuentahabiente = new CuentahabienteCreate
            {
                Nombre = string.Empty,
                IdTipoDocumento = 0,
                Documento = string.Empty,
                Direccion = string.Empty,
                Telefono = string.Empty,
                IdCiudad = 0,
                Clave = string.Empty
            };
            await CargarDatos();
        }
        else
        {
            mensaje = "Error al actualizar el cuentahabiente";
            esError = true;
        }
    }

    private async Task BuscarPorDocumento()
    {
        if (!string.IsNullOrWhiteSpace(busqueda))
        {
            var resultado = await CuentahabienteService.GetCuentahabienteByDocumentoAsync(busqueda);
            if (resultado != null)
            {
                cuentahabientes = new List<Cuentahabiente> { resultado };
                mensaje = null;
            }
            else
            {
                mensaje = $"No se encontró cuentahabiente con documento {busqueda}";
                esError = true;
                cuentahabientes = new List<Cuentahabiente>();
            }
        }
        else
        {
            await CargarDatos();
        }
        StateHasChanged();
    }

    private async Task LimpiarBusqueda()
    {
        busqueda = string.Empty;
        mensaje = null;
        await CargarDatos();
        StateHasChanged();
    }

    private async Task OnKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await BuscarPorDocumento();
        }
    }

    private void SolicitarEliminar(int id)
    {
        cuentahabienteAEliminarId = id;
        mostrarConfirmEliminar = true;
        mensaje = null;
    }

    private void CancelarEliminar()
    {
        mostrarConfirmEliminar = false;
        cuentahabienteAEliminarId = null;
    }

    private async Task ConfirmarEliminar()
    {
        if (!cuentahabienteAEliminarId.HasValue) return;

        var exito = await CuentahabienteService.DeleteCuentahabienteAsync(cuentahabienteAEliminarId.Value);
        if (exito)
        {
            mensaje = "Cuentahabiente eliminado exitosamente";
            esError = false;
            await CargarDatos();
        }
        else
        {
            mensaje = "Error al eliminar el cuentahabiente";
            esError = true;
        }
        CancelarEliminar();
    }
}