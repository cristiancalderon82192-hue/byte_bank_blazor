@page "/tipos-cuenta"
@using ByteBank.Models
@using ByteBank.Services
@inject CatalogoService CatalogoService
@inject IJSRuntime JS

<PageTitle>Tipos de Cuenta</PageTitle>

<h1>Tipos de Cuenta</h1>

<p>Gestión del catálogo de tipos de cuenta.</p>

@if (tipos == null)
{
    <p><em>Cargando...</em></p>
}
else
{
    <button class="btn btn-primary mb-3" @onclick="ShowCreateModal">Nuevo Tipo de Cuenta</button>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tipo in tipos)
            {
                <tr>
                    <td>@tipo.IdTipoCuenta</td>
                    <td>@tipo.Nombre</td>
                    <td>
                        <button class="btn btn-sm btn-secondary" @onclick="() => ShowEditModal(tipo)">Editar</button>
                        <button class="btn btn-sm btn-danger" @onclick="() => DeleteTipo(tipo)">Eliminar</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@if (showModal)
{
    <div class="modal fade show" style="display:block" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@(isEditing ? "Editar" : "Nuevo") Tipo de Cuenta</h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="nombre" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="nombre" @bind="currentTipo.Nombre" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseModal">Cancelar</button>
                    <button type="button" class="btn btn-primary" @onclick="SaveTipo">Guardar</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

@code {
    private List<TipoCuenta>? tipos;
    private bool showModal = false;
    private bool isEditing = false;
    private TipoCuentaCreate currentTipo = new();
    private int currentId = 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadTipos();
    }

    private async Task LoadTipos()
    {
        tipos = await CatalogoService.GetTiposCuentaAsync();
    }

    private void ShowCreateModal()
    {
        currentTipo = new TipoCuentaCreate();
        currentId = 0;
        isEditing = false;
        showModal = true;
    }

    private void ShowEditModal(TipoCuenta tipo)
    {
        currentTipo = new TipoCuentaCreate { Nombre = tipo.Nombre };
        currentId = tipo.IdTipoCuenta;
        isEditing = true;
        showModal = true;
    }

    private void CloseModal()
    {
        showModal = false;
    }

    private async Task SaveTipo()
    {
        if (string.IsNullOrWhiteSpace(currentTipo.Nombre))
            return;

        if (isEditing)
        {
            await CatalogoService.UpdateTipoCuentaAsync(currentId, currentTipo);
        }
        else
        {
            await CatalogoService.CreateTipoCuentaAsync(currentTipo);
        }

        showModal = false;
        await LoadTipos();
    }

    private async Task DeleteTipo(TipoCuenta tipo)
    {
        if (await JS.InvokeAsync<bool>("confirm", $"¿Está seguro de eliminar el tipo de cuenta '{tipo.Nombre}'?"))
        {
            await CatalogoService.DeleteTipoCuentaAsync(tipo.IdTipoCuenta);
            await LoadTipos();
        }
    }
}
