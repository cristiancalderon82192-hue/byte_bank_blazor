@page "/tipos-cuenta"
@using ByteBank.Models
@using ByteBank.Services
@inject CatalogoService CatalogoService
@inject IJSRuntime JS

<PageTitle>Tipos de Cuenta</PageTitle>

<h1>Tipos de Cuenta</h1>
<p class="text-muted">Gestión del catálogo de tipos de cuenta.</p>

<div class="mb-3">
    <button class="btn btn-primary" @onclick="ShowCreateForm">
        <span class="bi bi-plus-circle"></span> Nuevo Tipo de Cuenta
    </button>
</div>

@if (showForm || isEditing || showDeleteConfirm)
{
    <div class="card mb-3">
        <div class="card-header @(showForm ? "bg-primary text-white" : isEditing ? "bg-warning text-dark" : "bg-danger text-white")">
            <h5 class="mb-0">@(showForm ? "Nuevo Tipo de Cuenta" : isEditing ? "Editar Tipo de Cuenta" : "Confirmar eliminación")</h5>
        </div>
        <div class="card-body">
            @if (showForm || isEditing)
            {
                <div class="mb-3">
                    <label for="nombre" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="nombre" @bind="currentTipo.Nombre" />
                </div>
                <div class="mb-3">
                    <label for="sobregiro" class="form-label">Sobregiro</label>
                    <input type="number" step="0.01" class="form-control" id="sobregiro" @bind="currentTipo.Sobregiro" />
                </div>
                <div class="d-flex gap-2">
                    <button type="button" class="btn @(showForm ? "btn-success" : "btn-primary")" @onclick="SaveTipo">Guardar</button>
                    <button type="button" class="btn btn-secondary" @onclick="CancelAction">Cancelar</button>
                </div>
            }
            else if (showDeleteConfirm)
            {
                <p>¿Está seguro de eliminar el tipo de cuenta <strong>@tipoToDelete?.Nombre</strong>?</p>
                <div class="d-flex gap-2">
                    <button class="btn btn-danger" @onclick="ConfirmDelete">Eliminar definitivamente</button>
                    <button class="btn btn-secondary" @onclick="CancelAction">Cancelar</button>
                </div>
            }
        </div>
    </div>
}

@if (tipos == null)
{
    <p><em>Cargando...</em></p>
}
else if (!tipos.Any())
{
    <div class="alert alert-info">
        <strong>No hay tipos de cuenta registrados.</strong>
    </div>
}
else
{
    <div class="row">
        @foreach (var tipo in tipos)
        {
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@tipo.Nombre</h5>
                        <p class="card-text text-muted">ID: @tipo.IdTipoCuenta</p>
                        @if (tipo.Sobregiro.HasValue)
                        {
                            <p class="card-text">Sobregiro: @tipo.Sobregiro.Value.ToString("C2")</p>
                        }
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <div>
                                <button class="btn btn-sm btn-primary me-2" @onclick="() => ShowEditForm(tipo)">Editar</button>
                                <button class="btn btn-sm btn-outline-danger" @onclick="() => ShowDeleteConfirm(tipo)">Eliminar</button>
                            </div>
                            <small class="text-muted">
                                <span class="bi bi-wallet2"></span> Cuenta
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    private List<TipoCuenta>? tipos;
    private bool showForm = false;
    private bool isEditing = false;
    private bool showDeleteConfirm = false;
    private TipoCuentaCreate currentTipo = new();
    private int currentId = 0;
    private TipoCuenta? tipoToDelete;

    protected override async Task OnInitializedAsync()
    {
        await LoadTipos();
    }

    private async Task LoadTipos()
    {
        tipos = await CatalogoService.GetTiposCuentaAsync();
    }

    private void ShowCreateForm()
    {
        currentTipo = new TipoCuentaCreate();
        currentId = 0;
        showForm = true;
        isEditing = false;
        showDeleteConfirm = false;
    }

    private void ShowEditForm(TipoCuenta tipo)
    {
        currentTipo = new TipoCuentaCreate { Nombre = tipo.Nombre, Sobregiro = tipo.Sobregiro };
        currentId = tipo.IdTipoCuenta;
        showForm = false;
        isEditing = true;
        showDeleteConfirm = false;
    }

    private void ShowDeleteConfirm(TipoCuenta tipo)
    {
        tipoToDelete = tipo;
        showForm = false;
        isEditing = false;
        showDeleteConfirm = true;
    }

    private void CancelAction()
    {
        showForm = false;
        isEditing = false;
        showDeleteConfirm = false;
        tipoToDelete = null;
    }

    private async Task SaveTipo()
    {
        if (string.IsNullOrWhiteSpace(currentTipo.Nombre))
            return;

        if (isEditing)
        {
            await CatalogoService.UpdateTipoCuentaAsync(currentId, currentTipo);
        }
        else
        {
            await CatalogoService.CreateTipoCuentaAsync(currentTipo);
        }

        CancelAction();
        await LoadTipos();
    }

    private async Task ConfirmDelete()
    {
        if (tipoToDelete != null)
        {
            await CatalogoService.DeleteTipoCuentaAsync(tipoToDelete.IdTipoCuenta);
            await LoadTipos();
        }
        CancelAction();
    }
}
